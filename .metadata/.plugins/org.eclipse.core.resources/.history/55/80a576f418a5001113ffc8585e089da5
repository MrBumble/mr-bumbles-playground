package matt.hesse;

/**
 * 
 * @author Matt
 * 
 * 
 *         This class encrpyts and decpryts Messages based on the RSA algorithm
 */

public class RSA {

	public RSA() {

	}

	public String encrypt(String text, int exp, int N) {
		String code = "";
		String clean = text;
		int length = clean.length();
		
		for(int i = 0; i < length; i++){
			code = code + (char)(Math.pow(text.charAt(i),exp) % N);
			
		}

		return code;

	}

	public String decrypt() {
		String clean = "";

		return clean;

	}
	
	
	public static void main(String[] args){
		RSA rsa = new RSA();
		System.out.println(rsa.encrypt("7", 23, 143));
		
	}
}
